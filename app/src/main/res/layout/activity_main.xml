<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

    <FrameLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/mainNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/bottom_navigation_view_elevation"
            app:elevation="@dimen/bottom_navigation_view_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemIconTint="@drawable/bottom_navigation_selectors"
            app:itemTextColor="@drawable/bottom_navigation_selectors"
            app:itemBackground="@drawable/bottom_navigation_ripple"
            app:itemTextAppearanceInactive="@style/itemTextAppearanceInactive"
            app:itemTextAppearanceActive="@style/itemTextAppearanceActive"
            app:menu="@menu/navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>