<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        android:layout_margin="@dimen/margin_standart_half">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_standart_half">

        <ImageView android:layout_width="@dimen/card_image_width"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/ic_launcher"/>
        <TextView
                android:id="@+id/document_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standart"
                android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
                android:id="@+id/document_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standart"
                android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>